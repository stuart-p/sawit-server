{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/users/:username": {
    "description": "serves an object of the queried user",
    "queries": [],
    "exampleResponse": {
      "user": [
        {
          "username": "ernie101",
          "avatar_url": "www.github.com/ernie101pic",
          "name": "John Smith"
        }
      ]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all topics",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an array of a single article",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the votes on an article",
    "queries": [],
    "body": { "inc_votes": 1 },
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341,
          "votes": 3
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments on a specific article",
    "queries": ["sort_by", "order"],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 33,
          "votes": 3,
          "author": "weegembump",
          "body": "Text from the comment..",
          "created_at": 1527695953341
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "serves an array of a comment that has been posted on a specific article",
    "queries": [],
    "body": {
      "username": "weegembump",
      "body": "Text from the comment.."
    },
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 33,
          "votes": 3,
          "author": "weegembump",
          "body": "Text from the comment..",
          "created_at": 1527695953341
        }
      ]
    }
  },
  "PATCH /api/comments/:comment_id": {
    "description": "updates the vote on a specific comment",
    "queries": [],
    "body": {
      "inc_votes": 1
    },
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 33,
          "votes": 3,
          "author": "weegembump",
          "body": "Text from the comment..",
          "created_at": 1527695953341
        }
      ]
    }
  },
  "DELETE /api/comment/:comment_id": {
    "description": "delete a comment",
    "queries": [],
    "exampleResponse": {}
  }
}
